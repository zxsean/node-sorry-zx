            <img src="/templates/<%- name %>/example.png" alt="Lights" style="width:100%">
            <h1 class="w3-text-blue">
                <%- tips %>
            </h1>
        </div>

        <div class="w3-container">
            <!--配置input-->
            <%- container_items %>

            <div id="result"></div>

            <p>
